<h1>Event Details</h1>

<%= link_to "Home", root_path %>
<%= link_to "Back", :back %>

<p>Creator: <%= link_to @event.creator.name, @event.creator %></p>

<p>Event name: <%= @event.name %></p>

<p>Location: <%= @event.location %></p>

<p>Date: <%= @event.date.to_fs :long %></p>

<p>
  Attendees:

  <% if user_signed_in? %>
    <%= button_to "Attend this event", event_attendances_path, params: { event_id: @event.id } %>
  <% end %>

  <ul>
    <% @event.attendees.each do |a| %>
      <li><%= a.name %></li>
    <% end %>
  </ul>
</p>

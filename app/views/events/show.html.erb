<h1>Event Details</h1>

<%= link_to "Home", root_path %>
<%= link_to "Back", :back %>

<p>Creator: <%= link_to @event.creator.name, @event.creator %></p>

<p>Event name: <%= @event.name %></p>

<p>Location: <%= @event.location %></p>

<p>Date: <%= @event.date.to_fs :long %></p>

<p>
  Attendees:

  <% if user_signed_in? %>
    <% if current_user == @event.creator %>
      <%= form_with url: event_attendances_path do |f| %>
        <%= f.hidden_field :event_id, value: @event.id %>
        <%# This select multiple done by Rails helpers is weird %>
        <%= f.select :attendee_ids, User.excluding(@event.attendees, @event.creator).collect { |u| [u.name, u.id] }, multiple: true %>
        <%= f.button "Invite selected users" %>
      <% end %>
    <% elsif @event.public_status? %>
      <%= button_to "Attend this event", event_attendances_path, params: { event_id: @event.id, attendee_ids: [current_user.id] } %>
    <% end %>
  <% end %>

  <ul>
    <% @event.attendees.each do |a| %>
      <li><%= a.name %></li>
    <% end %>
  </ul>
</p>
